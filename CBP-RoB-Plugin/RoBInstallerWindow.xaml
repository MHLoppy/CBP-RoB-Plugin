<Window x:Class="CBP_RoB_Plugin.RoBInstallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CBP_RoB_Plugin"
        mc:Ignorable="d"
        Title="Rise of Babel Installer" Height="260" Width="380"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select language to install:" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.ColumnSpan="2"/>
        <Button Name="EnglishButton" Grid.Column="0" Grid.Row="1" Content="English (text only)" FontSize="14" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Click="EnglishButton_Click"/>
        <!-- por favor help with the other languages, I'm so fucking tired of begging people to contribute to CBP and then still having to do it all myself -->
    </Grid>
</Window>
